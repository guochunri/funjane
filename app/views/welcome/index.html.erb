<div class="welcome-box">
  <!--===== 广告轮播 =====-->
  <section class="intro-box">
    <div class="row">
      <div class="col-md-12">
        <div id="intro" class="carousel slide" data-ride="carousel">
          <!--===== 轮播按鈕 =====-->
          <!-- <ol class="carousel-indicators">
            <li data-target="#intro" data-slide-to="0" class="active"></li>
            <li data-target="#intro" data-slide-to="1"></li>
            <li data-target="#intro" data-slide-to="2"></li>
          </ol> -->

          <!--===== 轮播內容 =====-->
          <div class="carousel-inner" role="listbox">
            <% @intros.each_with_index do |intro,index| %>
              <% if index == 0 %>
                <div class="item active">
              <% else %>
                <div class="item">
              <% end %>
                <%= link_to intro.link, target: "_blank" do %>
                  <%= image_tag(intro.image) %>
                  <div class="carousel-caption">
                    <h3><%= intro.title %></h3>
                    <p><%= intro.content %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>

          <!--===== 换页按钮 =====-->
          <a class="left carousel-control" href="#intro" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#intro" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!--===== 品牌故事 =====-->
  <section class="section-2">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h3 class="tagline text-center"><%= t('section-2-title')%></h1>
            <p class="col-md-6 col-md-offset-3 text-center tagp">
              <%= t('section-2-content1')%><br>
              <%= t('section-2-content2')%>
            </p>
        </div>
      </div>
    </div>
  </section>


  <!--===== 商品类型 =====-->
  <section class="categories-box">
    <div class="row">
      <div class="col-md-4 category-content">
        <%= link_to '#' , class: "category_1" do %>
          <div class="category-box">
            <%= image_tag("category_1.jpg") %>
          </div>
          <div>
            <h3><%= t('th-art') %></h3>
            <p><%= t('slogan-art') %></p>
          </div>
        <% end %>
      </div>
      <div class="col-md-4 category-content">
        <%= link_to '#' , class: "category_2" do %>
          <div class="category-box">
            <%= image_tag("category_2.jpg") %>
          </div>
          <div>
            <h3><%= t('th-cake') %></h3>
            <p><%= t('slogan-cake') %></p>
          </div>
        <% end %>
      </div>
      <div class="col-md-4 category-content">
        <%= link_to '#' , class: "category_3" do %>
          <div class="category-box">
            <%= image_tag("category_3.jpg") %>
          </div>
          <div>
            <h3><%= t('th-lego') %></h3>
            <p><%= t('slogan-lego') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!--===== 推荐商品 =====-->
  <section class="show-box">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h2><%= t('th-featured-products') %></h2>
        <div class="short-line"></div>
        <div class='row'>
          <% @products.each_with_index do |product, index| %>
            <div class='col-xs-12 col-md-3'>
              <%= link_to product_path(product) do %>
                <!-- 商品图片 -->
                <% if product.product_images.present? %>
                  <!-- 显示第一张图片 -->
                  <%= image_tag(product.product_images[0].image.thumb.url, class: 'thumbnail')%>
                <% else %>
                  <%= image_tag('http://placehold.it/200x200&text=No Pic', class: 'thumbnail') %>
                <% end %>
              <% end %>

              <!-- 商品名称 -->
              <%= product.name %><br/>
              <!-- 商品价钱-->
              $ <%= product.price %>

            </div>
          <% end %>
        </div>
    </div>
  </section>

  <!--===== 合作品牌 =====-->
  <section class="brand-box">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h2><%= t('th-brands') %></h2>
        <div class="short-line"></div>
        <%= image_tag("brand_1.png") %>
        <%= image_tag("brand_2.png") %>
        <%= image_tag("brand_3.png") %>
        <%= image_tag("brand_4.png") %>
        <%= image_tag("brand_5.png") %>
        <%= image_tag("brand_6.png") %>
        <%= image_tag("brand_7.png") %>
        <%= image_tag("brand_8.png") %>
        <%= image_tag("brand_9.png") %>
      </div>
    </div>
  </section>

  <!--===== 立即购买 =====-->
  <section class="push-box">
    <%= link_to(t('btn-buy-now'), products_path, class:'btn btn-push' ) %>
  </section>

  <!--===== Go top（回到顶端） =====-->
  <div class="goTop">
    <span class="fa fa-chevron-up"></span>
  </div>
</div>
