<div class='row'>
  <div class='col-md-12'>
    <!--=== 页面标题 ===-->
    <h2><%= t('account-wish-list-index') %></h2>

    <!--=== 使用者愿望清单 ===-->
    <table class='table'>
      <!-- 历史订单列表內容 -->
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td>
              <%= link_to product_path(product) do %>
                <!-- 商品图片 -->
                <% if product.product_images.present? %>
                  <!-- 显示第一张图片 -->
                  <%= image_tag(product.product_images[0].image.mini.url, class: 'thumbnail')%>
                <% else %>
                  <%= image_tag('http://placehold.it/100x100&text=No Pic', class: 'thumbnail') %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(product.name, product_path(product)) %>
            </td>
            <td>
              <%= product.price %>
            </td>
            <td>
              <%= t('btn-move-to-cart') %>
            </td>
            <td>
              <i class='fa fa-close'></i>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
