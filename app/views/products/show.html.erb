<!--=== 商品信息 ===-->
<h1> <%= @product.name %> </h1>

<!-- 所属主类别 -->
<h3><%= t('f-category-group') %></h3>
<p>
  <%= @product.category.category_group.name %>
</p>

<!-- 所属类别 -->
<h3><%= t('f-product-category') %></h3>
<p>
  <%= @product.category.name %>
</p>

<!-- 所属品牌 -->
<h3><%= t('f-product-brand') %></h3>
<p>
  <%= @product.brand.name %>
</p>

<!-- 商品价钱 -->
<h3><%= t('f-product-price') %></h3>
<p>
  <%= @product.price %>
</p>

<!-- 商品库存 -->
<h3><%= t('f-product-quantity') %></h3>
<p>
  <%= @product.quantity %>
</p>

<%= link_to(t('btn-add-to-cart'), add_to_cart_product_path(@product), :method => :post, :class => 'btn btn-lg btn-default') %>
