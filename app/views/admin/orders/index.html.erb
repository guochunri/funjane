<div class='row'>
  <div class='col-md-12'>
    <!--=== 页面标题 ===-->
    <h2><%= t('order-index') %></h2>
    <br/>
    <br/>
    <!--=== 订单列表 ===-->
    <table class='table'>
      <!--=== 订单列表标题 ===-->
      <thead>
        <tr>
          <th>#</th>
          <th><%= t('f-order-created-at') %></th>
          <th><%= t('f-order-user') %></th>
          <th><%= t('f-order-status') %></th>
        </tr>
      </thead>
      <!--=== 当单列表內容 ===-->
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to(order.id, admin_order_path(order)) %></td>
          <td><%= order.created_at.to_s(:long) %></td>
          <td><%= order.user.email %></td>
          <td><%= order.aasm_state %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
