<!--=== 新增广告 ===-->
<%= simple_form_for [:admin, @intro] do |f| %>
  <!-- 广告标题 -->
  <div class='group'>
    <%= f.input :title, :label => t('f-intro-title') %>
  </div>

  <!-- 广告內容 -->
  <div class='group'>
    <%= f.input :content, :label => t('f-intro-content') %>
  </div>

  <!-- 广告链接 -->
  <div class='group'>
    <%= f.input :link, :label => t('f-intro-link') %>
  </div>

  <!-- 上传图片 -->
  <div class='group'>
    <%= f.label t('f-intro-image') %><br>
    <%= f.file_field :image %>
  </div>

  <!-- 广告是否隐藏 -->
  <div class='group'>
    <%= f.input :is_hidden, :label => t('f-hide') %>
  </div>

  <%= f.submit t('f-submit'), class: 'btn btn-lg btn-default' %>

<% end %>
