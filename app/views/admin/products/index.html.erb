<!--=== 标题 ===-->
<h2><%= t('product-index') %></h2>

<!--=== 新增商品 ===-->
<div class="pull-right">
  <%= link_to(t('btn-product-new'), new_admin_product_path, :class => 'btn btn-sm btn-default')%>
</div>

<!--=== 商品列表 ===-->
<table class="table">
  <!--=== 商品列表标题 ===-->
  <thead>
    <tr>
      <th></th>
      <th><%= t('f-product-name') %></th>
      <th><%= t('f-product-brand') %></th>
      <th><%= t('f-product-category') %></th>
      <th><%= t('f-product-options') %></th>
    </tr>
  </thead>

  <!--=== 商品列表內容 ===-->
  <% @products.each do |product| %>
    <tr>
      <td><%= render_product_status(product) %></td>
      <td><%= link_to(product.name, admin_product_path(product)) %></td>
      <td><%= product.brand.name %></td>
      <td><%= product.category.name %></td>
      <!--=== 操作选项 ===-->
      <td>
        <!-- 编辑 -->
        <%= link_to(t('btn-edit'), edit_admin_product_path(product), :class => 'btn btn-sm btn-default') %>
        <!-- 发布 / 隐藏 -->
        <% if product.is_hidden %>
          <%= link_to(t('btn-publish'), publish_admin_product_path(product), :method => :post, :class => 'btn btn-sm btn-default') %>
        <% else %>
          <%= link_to(t('btn-hide'), hide_admin_product_path(product), :method => :post, :class => 'btn btn-sm btn-default') %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
