<!--=== 新增分类 ===-->
<h2><%= t('category-new') %></h2>

<!--=== 新增分类表单 ===-->
<%= simple_form_for [:admin, @category] do |f| %>

  <div class="group">
    <%= select_tag(:category_group_id, options_for_select(@category_groups), :prompt => t('f_category-group')) %>
  </div>

  <div class="group">
    <%= f.input :name, :label => t('f-category-name') %>
  </div>

  <div class="group">
    <%= f.input :is_hidden, :label => t('f-hide') %>
  </div>

  <%= f.submit t('f-submit'), class: 'btn btn-lg btn-default' %>

<% end %>
