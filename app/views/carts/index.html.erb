<div class="row">
  <div class="col-md-12">
    <!--=== 页面标题 ===-->
    <h2><%= t('cart-index') %></h2>

    <!--=== 购物车信息 ===-->
    <table class="table">
      <!-- 购物车列表标题 -->
      <thead>
        <tr>
          <th><%= t('f-cart-product-info') %></th>
          <th><%= t('f-cart-product-price') %></th>
          <th><%= t('f-cart-product-quantity') %></th>
        </tr>
      </thead>
      <!-- 购物车列表内容 -->
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to(cart_item.product.name, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <%= cart_item.quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br/>
    <!--=== 购物车内商品总价 ===-->
    <div class='totol clearfix'>
      <span class='pull-right'>
        <span><%= t('f-cart-total') %></span>
      </span>
    </div>

    <hr/>
    <!--=== 购物车结账 ===-->
    <div class='checkout clearfix'>
      <span class='pull-right'>
        <%= link_to(t('btn-checkout'), '#', method: :post, class: 'btn btn-lg btn-default') %>
      </span>
    </div>
  </div>
</div>
